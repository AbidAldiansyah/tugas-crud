*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body{
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background: #445;
}

.input{
    width: 300px;
    background: black;
    color: white;
}

.input h1{
    font-size: 50px;
    text-align: center;
}


.input .box-input{
    width: 100%;
    height: 50px;
    margin: 30px 0;
}

.box-input input {
    width: 300px;
    height: 30px;
    background: transparent;
    border: none;
    outline: none;
    border: 2px solid rgb(61, 61, 216);
    border-radius: 40px;
    font-size: 15px;
    padding: 18px 50px 20px 20px;
}

button{
    display: flex;
    text-justify: center;
    font-size: 15px;
    width: 100%;
    height: 50px;
    padding: 10px;
    border: none;
    margin-bottom: 10px;
    box-sizing: border-box;
    border-radius: 50px;
    background: #303544;
    color: rgb(109, 102, 102);
}

p {
    display: flex;
    justify-content: center;
    font-size: larger;
    margin: 20px;
}







